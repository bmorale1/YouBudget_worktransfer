<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#585951">


    <TextView
        android:id="@+id/entertainment_txt"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginEnd="90dp"
        android:text="@string/cat9"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/show_entertainment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/utilities_txt"
        app:layout_constraintTop_toBottomOf="@+id/show_gas"
        tools:background="?attr/actionModeSplitBackground" />

    <TextView
        android:id="@+id/gas_txt"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginEnd="90dp"
        android:background="?attr/actionModeSplitBackground"
        android:text="@string/cat1"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/show_gas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/grocery_txt"
        app:layout_constraintTop_toBottomOf="@+id/show_insurance" />

    <TextView
        android:id="@+id/show_entertainment"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginEnd="90dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/rent_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/show_utilities"
        app:layout_constraintTop_toBottomOf="@+id/entertainment_txt" />

    <TextView
        android:id="@+id/show_gas"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginEnd="90dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/entertainment_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/show_grocery"
        app:layout_constraintTop_toBottomOf="@+id/gas_txt" />

    <TextView
        android:id="@+id/show_insurance"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginEnd="90dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/gas_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/show_savings"
        app:layout_constraintTop_toBottomOf="@+id/Insurance_txt" />

    <TextView
        android:id="@+id/show_utilities"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="94dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/food_txt"
        app:layout_constraintEnd_toStartOf="@+id/show_entertainment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/utilities_txt" />

    <TextView
        android:id="@+id/show_rent"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="228dp"
        android:layout_marginEnd="90dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/show_food"
        app:layout_constraintTop_toBottomOf="@+id/rent_txt" />

    <TextView
        android:id="@+id/Insurance_txt"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="17dp"
        android:background="?attr/actionModeSplitBackground"
        android:text="@string/cat8"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/show_insurance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Savings_txt"
        app:layout_constraintTop_toBottomOf="@+id/show_total" />

    <TextView
        android:id="@+id/show_total"
        android:layout_width="174dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/colorAccent"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/show_name"
        app:layout_constraintTop_toBottomOf="@+id/budgetTotal" />

    <TextView
        android:id="@+id/show_name"
        android:layout_width="177dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:background="?attr/colorAccent"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/show_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BudgetName" />

    <TextView
        android:id="@+id/utilities_txt"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="94dp"
        android:background="?attr/actionModeSplitBackground"
        android:text="@string/cat6"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/show_utilities"
        app:layout_constraintEnd_toStartOf="@+id/entertainment_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_grocery" />


    <TextView
        android:id="@+id/Savings_txt"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="16dp"
        android:background="?attr/actionModeSplitBackground"
        android:text="@string/cat2"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/show_savings"
        app:layout_constraintEnd_toStartOf="@+id/Insurance_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_name" />

    <TextView
        android:id="@+id/budgetTotal"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/colorAccent"
        android:text="@string/budgetTotal"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BudgetName" />

    <TextView
        android:id="@+id/BudgetName"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:background="?attr/colorAccent"
        android:text="@string/budgetName"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/budgetTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_grocery"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="94dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/utilities_txt"
        app:layout_constraintEnd_toStartOf="@+id/show_gas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grocery_txt" />

    <TextView
        android:id="@+id/show_food"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="228dp"
        android:layout_marginStart="94dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/show_rent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_txt" />

    <TextView
        android:id="@+id/show_savings"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="94dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/grocery_txt"
        app:layout_constraintEnd_toStartOf="@+id/show_insurance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Savings_txt" />

    <TextView
        android:id="@+id/grocery_txt"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="94dp"
        android:background="?attr/actionModeSplitBackground"
        android:text="@string/cat3"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/show_grocery"
        app:layout_constraintEnd_toStartOf="@+id/gas_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_savings" />

    <TextView
        android:id="@+id/rent_txt"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginEnd="90dp"
        android:background="?attr/actionModeSplitBackground"
        android:text="@string/cat5"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/show_rent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/food_txt"
        app:layout_constraintTop_toBottomOf="@+id/show_entertainment" />

    <TextView
        android:id="@+id/food_txt"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="94dp"
        android:background="?attr/actionModeSplitBackground"
        android:text="@string/cat4"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/show_food"
        app:layout_constraintEnd_toStartOf="@+id/rent_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_utilities" />

    </android.support.constraint.ConstraintLayout>

